<% @authors.each do |author| %>
<div class="row list-group-item">
  <div class="col-md-6">
    <p><%= author.firstName %> <%= author.lastName %></p>
  </div>
  <div class="col-md-6 ">
      <%= link_to 'edit', edit_author_path(author), class: 'btn btn-primary'  %>
      <%= link_to 'view', author_path(author),class: 'btn btn-primary'  %>
  </div>
</div>

<% end %>

<%= link_to 'New Author', new_author_url, class: 'btn btn-primary'  %>
