<%= form_for (@author), {:class => 'form-group'} do |f| %>
  <%= f.label :firstName, class: ''%>
  <%= f.text_field :firstName, :value => @author.firstName , class: 'form-control'  %>
  <%= f.label :lastName,class: ''  %>
  <%= f.text_field :lastName, :value => @author.lastName, class: 'form-control' %>
   <%= f.submit "Save changes", class:'button btn-success'%>
<% end %>
