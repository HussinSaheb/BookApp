<div class="row">
  <h3>Author: <%= @author.firstName %> <%= @author.lastName %></h3>
</div>

<div class="col-md-12">
  <% @books.each do |book| %>
  <div class="row individualBook">
    <p>Title: <%= book.title %></p>
    <p>Genre: <%= book.genre %></p>
  </div>
  <% end %>

  <div class="row">
    <%=  button_to "delete", @author,method: :delete %>
  </div>

</div>
